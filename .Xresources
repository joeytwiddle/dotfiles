# Sometimes I want to paste from the CLIPBOARD, not PRIMARY.
XTerm.*.translations: #override \n\
   Ctrl       <KeyPress> Insert: insert-selection(CLIPBOARD) \n\
   Ctrl Shift <KeyPress> Insert: insert-selection(CLIPBOARD)

